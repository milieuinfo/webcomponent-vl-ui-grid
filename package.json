{
  "name": "vl-ui-grid",
  "version": "1.0.12",
  "description": "De grid system voor vl-ui",
  "main": "vl-grid.js",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:imports && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-grid.js -- *.src.js",
    "release:prepare:imports": "replace '/node_modules/vl-ui-core/vl-core.src.js' '/node_modules/vl-ui-core/vl-core.js' vl-grid.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-core/core-style.css' vl-grid.js",
    "release:prepare:commit": "git add -f vl-grid.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-grid.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-grid/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-grid#readme",
  "dependencies": {
    "vl-ui-core": "^2.0.0"
  },
  "peerDependencies": {
    "vl-ui-core": "^2.0.0"
  },
  "devDependencies": {
    "@govflanders/vl-ui-core": "3.9.1",
    "http-server": "0.11.1",
    "np": "3.1.0",
    "replace": "1.1.1",
    "uglify-js-es6": "2.8.9",
    "vl-ui-icon": "^2.1.0",
    "vl-ui-link": "^1.1.10",
    "vl-ui-util": "^2.0.11",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  }
}
